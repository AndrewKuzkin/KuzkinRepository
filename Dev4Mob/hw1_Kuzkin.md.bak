#Задание 3

import Foundation

let cathetusAC = 8.0
let cathetusCB = 6.0

// Вычисление гипотенузы AB
let hypotenuseAB = sqrt(cathetusAC * cathetusAC + cathetusCB * cathetusCB)

// Вычисление площади и периметра прямоугольного треугольника
let area = (cathetusAC * cathetusCB) / 2
let perimeter = cathetusAC + cathetusCB + hypotenuseAB

print("Площадь прямоугольного треугольника: \(area)")
print("Периметр прямоугольного треугольника: \(perimeter)")
